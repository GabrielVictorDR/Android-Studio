<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_escuro"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgVitrine"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fundo" />

    <ImageView
        android:id="@+id/imgButtonPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="abrirVideo"
        app:layout_constraintBottom_toBottomOf="@+id/imgVitrine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgVitrine"
        app:layout_constraintTop_toTopOf="@+id/imgVitrine"
        app:srcCompat="@drawable/play" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVitrine">

        <LinearLayout
            android:id="@+id/lLayout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgVitrine">

            <LinearLayout
                android:id="@+id/lLayoutName_Playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="@string/nome_serie"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="salvarNaPlaylist"
                    android:text="Playlist"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:backgroundTint="#606060"
                    app:icon="@drawable/ic_add_playlist"
                    app:iconPadding="0dp"
                    app:iconTint="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="2013   6 Temporadas"
                android:textColor="@color/white" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:numStars="5"
                android:rating="4.5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Acompanhe malucas viagens no tempo-espaço e por universos paralelos com Rick, um cientista com problemas com a bebida, e seu neto Morty, um adolescente não tão brilhante quanto o avô."
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lLayout_info">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#555555"
                    android:drawableEnd="@drawable/ic_arrow_baixo"
                    android:padding="16dp"
                    android:text="Temporada 1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="1. Piloto"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="2. Lawnmowe Dog"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="3. Parque das Bactérias"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="4. M. Night Shaym-Aliens!"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="6. A Revolta dos Meeseeks"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="7. Rick Potion"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="8. Episódio 8"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="9. Episódio 9"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="10. Episódio 10"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fundo_escuro"
                    android:gravity="center|start"
                    android:text="11. Episódio 11"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/fundo_escuro"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="end"
                    app:iconTint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
